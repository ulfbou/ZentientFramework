<!-- Directory.Analyzer.props -->
<!-- This file contains configuration settings specific to Roslyn analyzer projects. -->
<Project>

  <!-- Core Analyzer Configuration -->
  <PropertyGroup Label="Analyzer">
    
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <AnalysisLevel>latest</AnalysisLevel>
    <AnalysisMode>Default</AnalysisMode>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <NoWarn>$(NoWarn);SA1200;SA1101;SA1633;SA1636;SA1609;RS0016;RS0037;SA1600;SA1649;SA1028;S1118;S1135;S125;RCS1102</NoWarn>
    <_SkipUpgradeNetAnalyzersNuGetWarning>true</_SkipUpgradeNetAnalyzersNuGetWarning>
    <IsRoslynComponent>true</IsRoslynComponent>
    <IsRoslynAnalyzerProject>true</IsRoslynAnalyzerProject>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <EnableAnalyzerPackaging>true</EnableAnalyzerPackaging>

  </PropertyGroup>

</Project>
