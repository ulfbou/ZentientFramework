<!-- Zentient.Analyzers.SourceGenerators -->
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Zentient.Analyzers.SourceGenerators</AssemblyName>
    <RootNamespace>Zentient.Analyzers.SourceGenerators</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Zentient.Analyzers.SourceGenerators</PackageId>
    <Version>1.0.0</Version>
    <Description>Roslyn source generators for Zentient stubs and templates.</Description>
    <DevelopmentDependency>true</DevelopmentDependency>
    <Authors>Ulf Bourelius</Authors>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Zentient.Analyzers.Core\Zentient.Analyzers.Core.csproj" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.14.0" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="4.14.0" PrivateAssets="all" />
  </ItemGroup>

</Project>
