<!-- Zentient.Analyzers.Templates Project File -->
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Zentient.Analyzers.Templates</AssemblyName>
    <RootNamespace>Zentient.Analyzers</RootNamespace>
    <Version>1.0.0</Version>
    <Description>Template/content package for Zentient analyzers</Description>

    <!-- NuGet metadata -->
    <Authors>Ulf Bourelius</Authors>
    <PackageAuthors>$(Authors)</PackageAuthors>
    <PackageId>Zentient.Analyzers.Templates</PackageId>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/ulfbou/Zentient.Analyzers</PackageProjectUrl>

    <!-- Packing behaviour -->
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>

    <!-- No compilation -->
    <TargetFramework>netstandard2.0</TargetFramework>
    <NoBuild>true</NoBuild>
  </PropertyGroup>

  <!-- Content to include in the package -->
  <ItemGroup>
    <None Include="$(MSBuildProjectDirectory)\placeholder.txt"
          Pack="true"
          PackagePath="contentFiles/any/any/" />
  </ItemGroup>

</Project>
