{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/bin/Release/net9.0/Zentient.Abstractions.dll",
            "src/bin/Release/net9.0/Zentient.Abstractions.xml"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Zentient.Abstractions",
      "_appTitle": "Zentient.Abstractions API Reference",
      "_enableSearch": true,
      "pdf": true
    }
  }
}
