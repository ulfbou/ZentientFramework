<Project>
  <!-- Quality Gate Validation -->
  <Target Name="QualityGateValidation" BeforeTargets="Build" Condition="'$(Configuration)' == 'Release'">
    <Message Text="Running quality gate validation..." Importance="high" />
  </Target>

  <!-- Coverage Report Generation -->
  <Target Name="GenerateCoverageReport" AfterTargets="Test" Condition="'$(CollectCoverage)' == 'true'">
    <Message Text="Generating code coverage report..." Importance="high" />
    <Exec Command="dotnet tool run reportgenerator -reports:$(CoverletOutput) -targetdir:$(TestResultsDirectory)/coverage -reporttypes:Html;Badges" 
          ContinueOnError="true" />
  </Target>
</Project>
