<Project>
  <PropertyGroup>
    <!-- Documentation Generation -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DocumentationFile>$(OutputPath)$(AssemblyName).xml</DocumentationFile>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
    
    <!-- DocFX Integration -->
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <IncludeSource>true</IncludeSource>
    <IncludeSymbols>true</IncludeSymbols>
  </PropertyGroup>

  <ItemGroup Condition="Exists('$(MSBuildThisFileDirectory)docfx.json')">
    <None Include="$(MSBuildThisFileDirectory)docfx.json" />
    <None Include="$(MSBuildThisFileDirectory)toc.yml" />
    <None Include="$(MSBuildThisFileDirectory)docs\**\*.md" />
  </ItemGroup>
</Project>
