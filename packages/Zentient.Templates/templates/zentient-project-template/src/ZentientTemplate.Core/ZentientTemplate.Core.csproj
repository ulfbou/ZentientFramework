<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>ZentientTemplate.Core</RootNamespace>
    <AssemblyName>ZentientTemplate.Core</AssemblyName>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Zentient.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Hosting" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
    <PackageReference Include="Microsoft.Extensions.Configuration" />
    <PackageReference Include="Microsoft.Extensions.Logging" />
    <PackageReference Include="Microsoft.Extensions.Options" />
    <PackageReference Include="AutoMapper" />
    <PackageReference Include="FluentValidation" />
    <PackageReference Include="FluentValidation.DependencyInjectionExtensions" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" Condition="'$(UseEntityFramework)' == 'true'" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Condition="'$(UseEntityFramework)' == 'true'" />
    <PackageReference Include="StackExchange.Redis" Condition="'$(UseRedisCache)' == 'true'" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../ZentientTemplate.Shared/ZentientTemplate.Shared.csproj" />
  </ItemGroup>

  <!-- Global Using Directives -->
  <ItemGroup>
    <Using Include="System" />
    <Using Include="System.Collections.Generic" />
    <Using Include="System.Linq" />
    <Using Include="System.Threading" />
    <Using Include="System.Threading.Tasks" />
    <Using Include="Microsoft.Extensions.DependencyInjection" />
    <Using Include="Microsoft.Extensions.Logging" />
    <Using Include="Microsoft.Extensions.Options" />
    <Using Include="Zentient.Abstractions.Results" />
    <Using Include="Zentient.Abstractions.Common" />
    <Using Include="Zentient.Abstractions.DependencyInjection" />
    <Using Include="Zentient.Abstractions.Configuration" />
    <Using Include="ZentientTemplate.Shared" />
  </ItemGroup>

</Project>
