{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/bin/Release/net9.0/Zentient.Abstractions.dll",
            "src/bin/Release/net9.0/Zentient.Abstractions.xml"
          ]
        }
      ],
      "output": "api",
      "properties": {
        "TargetFramework": "net9.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "docs/*.md",
          "docs/toc.yml"
        ]
      },
      {
        "files": [
          "docs/guides/**.md"
        ],
        "dest": "guides"
      },
      {
        "files": [
          "docs/development/**.md"
        ],
        "dest": "development"
      },
      {
        "files": [
          "docs/releases/**.md"
        ],
        "dest": "releases"
      },
      {
        "files": [
          "README.md",
          "CHANGELOG.md",
          "CODE_OF_CONDUCT.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Zentient.Abstractions",
      "_appTitle": "Zentient.Abstractions 3.0 Documentation",
      "_appFooter": "Zentient.Abstractions 3.0 - Foundation for Modern .NET Applications",
      "_enableSearch": true,
      "_enableNewTab": true,
      "pdf": false,
      "_gitContribute": {
        "repo": "https://github.com/ulfbou/Zentient.Abstractions",
        "branch": "main"
      },
      "_gitUrlPattern": "github"
    },
    "fileMetadata": {
      "_appTitle": {
        "api/**.yml": "Zentient.Abstractions API Reference",
        "guides/**.md": "Zentient.Abstractions User Guide",
        "development/**.md": "Zentient.Abstractions Development Guide",
        "releases/**.md": "Zentient.Abstractions Release Information"
      }
    }
  }
}
