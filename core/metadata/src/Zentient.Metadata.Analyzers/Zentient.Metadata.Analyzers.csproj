<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <AssemblyName>Zentient.Metadata.Analyzers</AssemblyName>
    <RootNamespace>Zentient.Metadata.Analyzers</RootNamespace>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageId>Zentient.Metadata.Analyzers</PackageId>
    <Authors>Zentient Framework Team</Authors>
    <Company>Zentient Framework Team</Company>
    <Description>Roslyn analyzers for Zentient.Metadata DX-friendliness</Description>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.3" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.8.0" />
  </ItemGroup>
</Project>
